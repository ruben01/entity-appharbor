@{
    ViewBag.Title = "Reporte de Prestamos";
    bool showCustomReport = (ViewBag.IsPost != null) ? true : false;
}


<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h2>Prestamos</h2>
        </hgroup>
        <div class="well">
            @using (Html.BeginForm())
            {

                <fieldset class="employe">
                    <legend>Reporte de Prestamos Por Usuarios</legend>

                    <div class="row">
                        <div class="form-group col-lg-6">
                            @Html.Label("Fecha Inicio", new { @class = "control-label" })
                            <div class="input-group">
                                @Html.CTextBox("fechaInicio", null, new { @class = "fecha" })
                                <label for="fechaInicio" class="input-group-addon btn">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </label>
                            </div>
                        </div>

                        <div class="form-group col-lg-6">
                            @Html.Label("Fecha Fin", new { @class = "control-label" })
                            <div class="input-group">
                                @Html.CTextBox("fechaFin", null, new { @class = "fecha" })
                                <label for="fechaFin" class="input-group-addon btn">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </label>
                            </div>
                            
                        </div>
                    </div>

                    <div class="row form-group col-lg-12">
                        <input type="submit" class="btn btn-default" value="Enviar" />
                        @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </fieldset>
            }
        </div>

        @if (!showCustomReport)
        { 
            @Html.Partial("Partial_PrestamosUsuarios")
        }
        else 
        {
            @Html.Partial("Partial_PrestamosUsuarios", null, ViewData) 
        }
    </div>
</div>
