@model Sigeret.Models.UserProfile

@{
    ViewBag.Title = "Detalles";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2></h2>
</hgroup>

<div class="row">
    <div class="col-lg-12">
        <div class="well">
            <fieldset>
                <legend>Usuario</legend>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.UserName)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.UserName)
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.Apellido)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.Apellido)
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.Nombre)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.Nombre)
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.Cedula)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.Cedula)
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.Matricula)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.Matricula)
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.Label("Estatus")</h3>
                        </div>
                        <div class="panel-body">
                            @(Model.EstatusUsuario.EnumInstanceToStr<EstatusUsuarios>())
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.NipSms)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.NipSms)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group scroll form_table col-lg-12 pl0">
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>
                                        @Html.DisplayName("Rol")
                                    </th>

                                </tr>
                                <tbody>
                                    @foreach (var item in Model.webpages_Roles)
                                    {
                                        <tr>
                                            <td>
                                                @item.RoleName
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group scroll form_table col-lg-12 pl0">
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>
                                        @Html.DisplayName("Contacto")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Descripción")
                                    </th>

                                </tr>
                                <tbody>
                                    @foreach (var item in Model.Contactoes)
                                    {
                                        <tr>
                                            <td>
                                                @item.Descripcion
                                            </td>
                                            <td>
                                                @item.TipoContacto.Descripcion
                                            </td>


                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>

                <div class="col-lg-12 row pl0 form-group">
                    
                    @Html.ActionLink("Regresar", "ReporteSolicitudesAdm", null, new { @class = "btn btn-primary col-lg-2 ml2" })
                </div>
            </fieldset>
        </div>

    </div>

</div>
