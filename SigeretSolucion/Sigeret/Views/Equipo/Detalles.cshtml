@model Sigeret.Models.Equipo

@{
    ViewBag.Title = "Detalles";
}
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2></h2>
</hgroup>

<div class="row">
    <div class="col-lg-12">
        <div class="well">
            <fieldset>
                <legend>Equipo</legend>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.ModeloEquipo.Nombre)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.ModeloEquipo.Nombre)
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.Serie)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.Serie)
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.ModeloEquipo.Modelo)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.ModeloEquipo.Modelo)
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.ModeloEquipo.Marca)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.ModeloEquipo.Marca)
                        </div>
                    </div>
                </div>

                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.Label("Estatus")</h3>
                        </div>
                        <div class="panel-body">
                          @(Model.EstatusEquipo.EnumInstanceToStr<EstatusEquipos>())
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.ModeloEquipo.Descripcion)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.ModeloEquipo.Descripcion)
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 row pl0 form-group">
                    @Html.ActionLink("Editar", "Editar", new { id = Model.Id }, new { @class = "btn btn-primary col-lg-2 ml2" })
                    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-default col-lg-2" })
                </div>
            </fieldset>
        </div>

    </div>

</div>



