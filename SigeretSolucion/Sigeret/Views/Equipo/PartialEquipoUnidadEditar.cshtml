@model Equipo

<div class="modal fade dn ignore" id="UnidadesModalEdit" data-focus-on="input:first" data-width="760">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Editar datos de Unidad</h4>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @using (Ajax.BeginForm("EditarUnidad", "Equipo",
                new AjaxOptions {
                    HttpMethod = "POST",
                    OnSuccess = "EditSuccess",
                    OnFailure = "EditFailure"
                }, new { @class = "editUnidadFrm" })){
                @Html.ValidationSummary(true)
                <div class="modal-body">
                    @Html.HiddenFor(model => model.IdModeloEquipo)
                    @Html.HiddenFor(model => model.Id)
                    <div class="row">
                        <div class="form-group col-lg-6">
                            @Html.CLabelFor(model => model.Serie)
                            @Html.CTextBoxFor(model => model.Serie)
                            @Html.CValidationMessageFor(model => model.Serie)
                        </div>
                        <div class="form-group col-lg-6">
                            @Html.CLabelFor(model => model.EstatusEquipo)
                            @Html.CDropDownListFor(model => model.EstatusEquipo, null, null, new { @class = "chosen" } )
                            @Html.CValidationMessageFor(model => model.EstatusEquipo)
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="modal-footer">
        <a href="#" data-dismiss="modal" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i>&nbsp;Cancelar</a>
        <button type="submit" class="btn btn-primary editUnidadBtn"><i class="glyphicon glyphicon-floppy-disk"></i>&nbsp;Guardar</button>
    </div>
</div>

