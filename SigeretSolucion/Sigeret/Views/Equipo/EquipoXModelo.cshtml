@model IEnumerable<Equipo>

@{
    ViewBag.Title = "Equipos por Modelo";
}

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h2>Equipos modelo @ViewBag.Modelo</h2>
        </hgroup>
        <div class="well">
            <fieldset>
              
                <div class="form-group col-lg-12">
                    <p class="">
                        @Html.ActionLink("Nuevo Equipo", "NuevoEquipo", null, new { @class = "btn btn-primary  fr mb10" })
                    </p>
                </div>
                <div class="form-group scroll form_table col-lg-12 pl0">
                    <table class="table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Serie)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model=>model.ModeloEquipo.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModeloEquipo.Marca)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModeloEquipo.Descripcion)
                            </th>

                            <th>Opciones</th>
                        </tr>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Serie
                                    </td>
                                    <td>
                                        @item.ModeloEquipo.Nombre
                                    </td>
                                    <td>
                                       @item.ModeloEquipo.Marca
                                    </td>
                                    <td>
                                        @item.ModeloEquipo.Descripcion
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                                        @Html.ActionLink("Detalles", "Detalles", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </fieldset>
        </div>
    </div>
</div>



