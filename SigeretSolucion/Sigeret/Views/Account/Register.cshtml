@model Sigeret.Models.RegisterModel

@{
    ViewBag.Title = "Registro";
}

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h2>Registrese</h2>
        </hgroup>
        <div class="well">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset class="employe">
                    <legend>Informaci&oacute;n b&aacute;sica del nuevo usuario</legend>

                    <div class="row">
                        <div class="form-group col-lg-4">
                            @Html.CLabelFor(model => model.Nombre)
                            @Html.CTextBoxFor(model => model.Nombre)
                            @Html.CValidationMessageFor(model => model.Nombre)
                        </div>
                        <div class="form-group col-lg-4">
                            @Html.CLabelFor(model => model.Apellido)
                            @Html.CTextBoxFor(model => model.Apellido)
                            @Html.CValidationMessageFor(model => model.Apellido)
                        </div>
                        <div class="form-group col-lg-4">
                            @*@Html.CLabelFor(model => model.Cedula)*@
                            <label for="Cedula" class="control-label">
                                C&eacute;dula&nbsp;&nbsp;
                                <i data-toggle="popover" data-content="La cédula debe estar en el formato 000-0000000-0" 
                                    title="Formato de cédula" class="glyphicon glyphicon-info-sign">
                                </i>
                            </label>
                            @Html.CTextBoxFor(model => model.Cedula, new { @class = "cedula" })
                            @Html.CValidationMessageFor(model => model.Cedula)
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-lg-4">
                            @Html.Label("Nombre Usuario", new { @class = "control-label" })
                            @Html.CTextBoxFor(model => Model.UserName)
                            @Html.CValidationMessageFor(model => model.UserName)
                        </div>
                        <div class="form-group col-lg-4">
                            @Html.CLabelFor(model => model.Password)
                            @Html.CPasswordFor(model => model.Password)
                            @Html.CValidationMessageFor(model => model.Password)
                        </div>
                        <div class="form-group col-lg-4">
                            @Html.CLabelFor(model => model.ConfirmPassword)
                            @Html.CPasswordFor(model => model.ConfirmPassword)
                            @Html.CValidationMessageFor(model => model.ConfirmPassword)
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-lg-4">
                            @Html.CLabelFor(model => model.Matricula)
                            @Html.CTextBoxFor(model => model.Matricula)
                            @Html.CValidationMessageFor(model => model.Matricula)
                        </div>
                        <div class="form-group col-lg-4">
                            @Html.CLabelFor(model => model.Correo)
                            @Html.CTextBoxFor(model => model.Correo, new{ placeholder="juanperez@ejemplo.com" })
                            @Html.CValidationMessageFor(model => model.Correo)
                        </div>
                    </div>

                    <div class="row form-group col-lg-12">
                        <input type="submit" class="btn btn-primary" value="Guardar" />                        
                        @Html.ActionLink("Regresar", "Index", "Home", new { @class = "btn btn-default" })
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>

