@model Sigeret.Models.LocalPasswordModel

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h2>Cambiar contraseña</h2>
        </hgroup>

        <div class="well">
            @using (Html.BeginForm("Manage", "Account"))
            {
                @Html.AntiForgeryToken()
                if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count() > 0)
                { 
                    <div class="alert alert-dismissable alert-danger">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        @Html.ValidationSummary(true)
                    </div>
                }

                if (!String.IsNullOrEmpty(ViewBag.StatusMessage))
                { 
                    <div class="alert alert-dismissable alert-success">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        <i class="glyphicon glyphicon-ok-sign"></i>&nbsp; &nbsp;<strong>@ViewBag.StatusMessage</strong>
                    </div>
                }

                <fieldset>
                    <legend>Formulario de cambio de contraseña</legend>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            @Html.CLabelFor(m => m.OldPassword)
                            @Html.CPasswordFor(m => m.OldPassword)
                            @Html.CValidationMessageFor(model => model.OldPassword)
                        </div>
                        <div class="form-group col-lg-4">
                            @Html.CLabelFor(m => m.NewPassword)
                            @Html.CPasswordFor(m => m.NewPassword)
                            @Html.CValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                        <div class="form-group col-lg-4">
                            @Html.CLabelFor(m => m.ConfirmPassword)
                            @Html.CPasswordFor(m => m.ConfirmPassword)
                        </div>
                    </div>
                    <div class="row form-group col-lg-12">
                        <input type="submit" value="Cambiar contraseña" class="btn btn-primary" />
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
