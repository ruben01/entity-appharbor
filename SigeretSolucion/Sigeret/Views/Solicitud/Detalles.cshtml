@model Sigeret.Models.Solicitud

@{
    ViewBag.Title = "Detalles Solicitud";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2></h2>
</hgroup>

<div class="row">
    <div class="col-lg-12">
        <div class="well">
            <fieldset>
               <legend>Detalles</legend>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.Label("Número Solicitud")</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.Id)
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.HoraInicio)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.HoraInicio)
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.HoraFin)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.HoraFin)
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.Descripcion)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.Descripcion)
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.AulaEdificio.Lugar.Edificio)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.AulaEdificio.Lugar.Edificio)
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.Label("Salon")</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.AulaEdificio.Aula)
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.Label("Estatus")</h3>
                        </div>
                        <div class="panel-body">
                            @(Model.EstatusSolicitud.EnumInstanceToStr<EstatusSolicitudes>())
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.LabelFor(model => model.Fecha)</h3>
                        </div>
                        <div class="panel-body">
                            @Html.DisplayFor(model => model.Fecha)
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group scroll form_table col-lg-12 pl0">
                            <table class="table table-striped table-bordered table-hover">
                                <tr>
                                    <th>
                                        @Html.DisplayName("Serie")
                                    </th>

                                    <th>
                                        @Html.DisplayName("Nombre")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Marca")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Modelo")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Descripción")
                                    </th>

                                </tr>
                                <tbody>
                                    @foreach (var item in ViewBag.EquiposSeleccionados)
                                    {
                                        <tr>
                                            <td>
                                                @item.Serie
                                            </td>
                                            <td>
                                                @item.ModeloEquipo.Nombre
                                            </td>
                                            <td>
                                                @item.ModeloEquipo.Marca
                                            </td>
                                            <td>
                                                @item.ModeloEquipo.Modelo
                                            </td>
                                            <td>
                                                @item.ModeloEquipo.Descripcion
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>



                <div class="col-lg-12 row pl0 form-group">
                    @Html.ActionLink("Editar", "Editar", new { id = Model.Id }, new { @class = "btn btn-primary col-lg-2 ml2" })
                    @Html.ActionLink("Regresar", "ReporteSolicitudesAdm", null, new { @class = "btn btn-default col-lg-2" })
                </div>
            </fieldset>
        </div>

        </div>

    </div>

