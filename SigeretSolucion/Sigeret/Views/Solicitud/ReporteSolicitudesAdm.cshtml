@model IEnumerable<Sigeret.Models.Solicitud>


@{
    ViewBag.Title = "Reporte Solicitudes Adm";
}

<div class="row">
    <div class="col-lg-12">
        <hgroup class="title">
            <h2>Solicitudes</h2>
        </hgroup>
        <div class="well">
            <fieldset>
                <legend>Solicitudes Administrador</legend>
                <div class="form-group col-lg-12">
                    <p class="">
                        @Html.ActionLink("Nueva", "Nueva", null, new { @class = "btn btn-primary  fr mb10" })
                    </p>
                </div>
                <div class="form-group scroll form_table col-lg-12 pl0">
                    <table class="table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                @Html.DisplayName("Número")
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayName("Edificio")
                            </th>
                            <th>
                                @Html.DisplayName("Salon")
                            </th>
                            <th>Opciones</th>
                        </tr>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AulaEdificio.Lugar.Edificio)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AulaEdificio.Aula)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                                        @Html.ActionLink("Detalles", "Detalles", new { id = item.Id }) |
                                        @Html.ActionLink("Cancelar", "Cancelar", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </fieldset>
        </div>
    </div>
</div>
